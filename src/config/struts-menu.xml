<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<package name="menu" namespace="/menu" extends="new-struts-default">
		<!-- 注意，此处的class名称一定要与beans.xml中配置该Action的bean标签的id属性值相同 -->
		<action name="menuAction_*" class="menuAction" method="{1}">
			<result name="{1}" type="dispatcher">
				/WEB-INF/jsp/menu/{1}.jsp
			</result>
		</action>
	</package>
</struts>