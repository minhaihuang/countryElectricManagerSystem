<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<!-- 常量配置 -->
	<constant name="struts.devModel" value="true"></constant>
	<constant name="struts.ui.theme" value="simple"></constant>
	<constant name="struts.objectFactory" value="spring"></constant>
	
	
	<!-- 配置全局拦截器和全局result -->
	<package name="new-struts-default"  namespace="/"  abstract="true"  extends="struts-default">
		<interceptors>
			<interceptor name="authInterceptor" class="com.hhm.elec.web.interceptor.AuthInterceptor"></interceptor>
			<!-- 新的默认拦截器栈 -->
			<interceptor-stack name="newDefaultStack">
				<interceptor-ref name="authInterceptor"></interceptor-ref>
				<interceptor-ref name="defaultStack"></interceptor-ref>
			</interceptor-stack>
		</interceptors>
		
		<!-- 指定默认的拦截器栈 -->
		<default-interceptor-ref name="newDefaultStack"></default-interceptor-ref>
		
		<!-- 配置全局result -->
		<global-results>
			<result name="authError">/authError.jsp</result>
		</global-results>
	</package>
	
	<include file="config/struts-text.xml"></include>
	<include file="config/struts-menu.xml"></include>
	<include file="config/struts-system.xml"></include>
	<include file="config/struts-workflow.xml"></include>
	<!-- Add packages here -->

</struts>
